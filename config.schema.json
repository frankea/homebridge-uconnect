{
  "pluginAlias": "Uconnect",
  "pluginType": "platform",
  "singular": true,
  "headerDisplay": "Homebridge plugin for Mopar Uconnect.",
  "schema": {
    "type": "object",
    "properties": {
      "email": {
        "title": "Email",
        "type": "string",
        "required": true,
        "format": "email",
        "description": "Your username email for www.mopar.com",
        "placeholder": "user@example.com"
      },
      "password": {
        "title": "Password",
        "type": "string",
        "required": true,
        "description": "Your password for www.mopar.com",
        "placeholder": "mypassword",
        "x-schema-form": {
           "type": "password"
         }
      },
      "pin": {
        "title": "PIN",
        "type": "string",
        "required": true,
        "pattern": "[0-9]{4}",
        "description": "Your PIN for remote commands",
        "placeholder": "1234",
        "x-schema-form": {
           "type": "password"
         }
      },
      "brand": {
        "title": "Vehicle Brand",
        "type": "string",
        "required": false,
        "default": "jeep",
        "description": "Select the brand that matches your vehicle. Default: Jeep.",
        "oneOf": [
          { "title": "Jeep", "enum": ["jeep"] },
          { "title": "Ram", "enum": ["ram"] },
          { "title": "Dodge", "enum": ["dodge"] },
          { "title": "Chrysler", "enum": ["chrysler"] },
          { "title": "Fiat", "enum": ["fiat"] },
          { "title": "Alfa Romeo", "enum": ["alfa_romeo"] },
          { "title": "Maserati", "enum": ["maserati"] }
        ]
      },
      "region": {
        "title": "Region",
        "type": "string",
        "required": false,
        "default": "us",
        "description": "Region where the vehicle is registered. Default: United States.",
        "oneOf": [
          { "title": "United States", "enum": ["us"] },
          { "title": "Canada", "enum": ["ca"] },
          { "title": "Europe", "enum": ["eu"] },
          { "title": "Asia", "enum": ["asia"] }
        ]
      },
      "timeout": {
        "title": "Timeout",
        "type": "number",
        "required": true,
        "description": "Timeout to wait for remote commands",
        "default": 30,
        "minimum": 0,
        "maximum": 300
      },
      "useGuardian": {
        "title": "Enable SiriusXM Guardian",
        "type": "boolean",
        "required": false,
        "default": false,
        "description": "Toggle to use Guardian-specific command endpoints when available. Leave off unless your vehicle uses SiriusXM Guardian."
      },
      "name": {
        "title": "Name",
        "type": "string",
        "required": false,
        "placeholder": "Uconnect",
        "description": "The name to assign this plugin for logging purposes. Default: Uconnect."
      }
    }
  }
}
